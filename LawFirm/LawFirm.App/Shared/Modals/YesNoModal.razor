<div class="modal-overlay">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm action</h5>
                <button type="button" class="btn-close" @onclick="@(() => Confirm(false))"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="@(() => Confirm(true))">Yes</button>
                <button type="button" class="btn btn-secondary" @onclick="@(() => Confirm(false))">No</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public EventCallback<bool> OnConfirmation { get; set; }

    private async Task Confirm(bool confirm)
    {
        await OnConfirmation.InvokeAsync(confirm);
    }
}