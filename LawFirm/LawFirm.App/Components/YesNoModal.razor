@inherits ComponentBase

<div class="modal-overlay">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Please confirm...</h4>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="@(() => Confirm(true))">Yes</button>
                <button type="button" class="btn btn-secondary" @onclick="@(() => Confirm(false))">No</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string Message { get; set; } = default!;

    [Parameter, EditorRequired]
    public EventCallback<bool> OnConfirmation { get; set; }

    private async Task Confirm(bool confirm)
    {
        await OnConfirmation.InvokeAsync(confirm);
    }
}